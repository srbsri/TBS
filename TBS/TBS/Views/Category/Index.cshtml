@model List<Category>

    <h1> Category List</h1>
    <div class="text-dark">
        <a asp-action="Create" asp-controller="Category" class="btn btn-primarybi">Create</a>
    </div>
 <table class="table table-bordered table-striped">
     <thead>
         <tr>
             <th>Id</th>
             <th>Name</th>
             <th>Age</th>
            <th>Description</th>
         </tr>
     </thead>

     <tbody>
         @foreach (var item in Model)
        {
            
         <tr>
             <td>@item.Id</td>
             <td>@item.Name</td>
             <td>@item.Age</td>
             <td>@item.Description</td>
         </tr>
        }

     </tbody>

 </table>